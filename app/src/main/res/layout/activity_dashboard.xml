<android.support.v4.widget.SwipeRefreshLayout android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cunyfirst.Dashboard">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/layout1"
            android:background="#337ab7" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/upcomingDates"
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/recyclerView1"
            android:layout_below="@+id/layout1" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:text="View Classes"
            bootstrapbutton:bootstrapBrand="success"
            android:id="@+id/button1"
            bootstrapbutton:roundedCorners="true"
            android:padding="5dp"
            android:layout_height="60dp"
            android:layout_width="380dp"
            android:layout_marginBottom="9dp"
            android:layout_above="@+id/button2"
            android:layout_centerHorizontal="true" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:text="Course History"
            bootstrapbutton:bootstrapBrand="warning"
            android:id="@+id/button3"
            bootstrapbutton:roundedCorners="true"
            android:padding="5dp"
            android:layout_height="60dp"
            android:layout_width="380dp"
            android:layout_above="@+id/button4"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_marginBottom="9dp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:text="Log Out"
            bootstrapbutton:bootstrapBrand="danger"
            android:id="@+id/button4"
            bootstrapbutton:roundedCorners="true"
            android:padding="5dp"
            android:layout_height="60dp"
            android:layout_width="380dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_marginBottom="9dp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:text="My Info"
            bootstrapbutton:bootstrapBrand="info"
            android:id="@+id/button2"
            bootstrapbutton:roundedCorners="true"
            android:padding="5dp"
            android:layout_height="60dp"
            android:layout_width="380dp"
            android:layout_marginBottom="8dp"
            android:layout_above="@+id/button3"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignStart="@+id/button1" />

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>